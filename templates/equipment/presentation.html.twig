            <h2 class="text-uppercase">Nos Logiciels</h2>
            <div class="lign mb-4"></div>
            <div class="row custom-line">
                {% for equipment in equipments %}
                    {% if equipment.category.name is same as 'Logiciel' %}

                        <div class="col-sm-10 col-md-6 col-lg-4 mt-2 mb-1">
                            <div class="card h-100 px-3 text-black">
                                <div class="card-header bg-transparent border-second">
                                    {{ equipment.category.name }} {{ equipment.type.name }}
                                </div>
                                <div class="card-body">
                                    <strong class="second-color">{{ equipment.brand.name }}</strong>
                                    <h5 class="card-title">{{ equipment.model }}</h5>
                                </div>
                                <img {# src="equipment:image/{{ image }};base64" /> #}
                                        alt="{{ equipment.category.name }}"
                                        title=""
                                        class="rounded"/>
                                {{ equipment.brand.name }}
                                <br><a href="{{ path('app_equipment_show', {equipmentId: equipment.id }) }}"
