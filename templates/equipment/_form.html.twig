{{ form_start(form) }}
{{ form_widget(form) }}

{% if originalPicture is not empty %}
	<i class="bi bi-image me-2"></i>
	<em>Image déjà enregistrée :
		{{ originalPicture }}</em>
{% else %}
	<i class="bi bi-eye-slash me-2"></i>
	<em>Aucune image enregistrée précédemment.</em>
{% endif %}
<br/><button class="btn button-ok mt-3">
	<i class="bi bi-check-lg me-2"></i>
	<span>{{ button_label|default('Enregistrer') }}</span>
</button>
{{ form_end(form) }}
