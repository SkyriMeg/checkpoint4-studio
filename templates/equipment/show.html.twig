{% extends 'base.html.twig' %}

{% block title %}Equipement
{% endblock %}

{% block body %}
	<div class="home">
		<h1>
			<strong>{{ equipment.brand.name }}</strong>
			{{ equipment.model }}</h1>

		{% if equipment.picture is not empty %}
			<div class="mb-3 text-center">
				<img src="{{ vich_uploader_asset(equipment) }}" alt="{{ equipment.model }}" class="img-show rounded">
			</div>
		{% else %}
			<div class="mb-3 text-center">
				<img src="https://images.pexels.com/photos/733853/pexels-photo-733853.jpeg" alt="Image d'illustration" class="img-pres overflow-hidden w-75 rounded">
			</div>
		{% endif %}

		<h3 class="second-color">{{ equipment.category.name }}
			{{ equipment.type.name }}</h3>
		<div class="lign mb-4"></div>

		<p>{{ equipment.description }}</p>

		<a class="btn button-ok mt-5" href="{{ path('app_equipment_presentation') }}">
			<i class="bi bi-arrow-return-left me-2"></i>Retour</a>

		{% if app.user %}
			<a class="btn button-retour mt-5 ms-2" href="{{ path('app_equipment_index') }}">
				<i class="bi bi-card-list me-2"></i>
				<span>Retour Ã  la liste</span>
			</a>
			<br/><a class="btn btn-outline-info mt-2" href="{{ path('app_equipment_edit', {'id': equipment.id}) }}">
				<i class="bi bi-gear me-2"></i>Modifier</a>

		{% endif %}


	</div>
{% endblock %}
