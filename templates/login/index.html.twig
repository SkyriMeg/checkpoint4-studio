{% extends 'base.html.twig' %}

{% block title %}Connexion administrateur{% endblock %}

{% block body %}
<div class="home">
    <h1>Connexion administrateur</h1>

    {% if error %}
        <div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class=" container d-flex justify-content-center text-center mb-5">
        <div>
            <p class="text-danger"><i class="bi bi-exclamation-triangle me-2"></i>Cette connexion est strictement réservée à l'administrateur de Meg Studio.</p>
            <form action="{{ path('app_login') }}" method="post">
                <div class="row col mt-4">
                    <div class="col-lg-6 col-sm-12">
                        <label for="username">Email:</label>
                    </div>
                    <div class="input-log col-lg-6 col-sm-12">
                        <input type="text" id="username" name="_username" required>
                    </div>
                </div>

                <div class="row col mt-2">
                    <div class="col-lg-6 col-sm-12 mt-2">
                        <label for="password">Mot de passe:</label>
                    </div>
                    <div class="input-log col-lg-6 col-sm-12">
                        <input type="password" id="password" name="_password" required>
                    </div>
                </div>

                <button type="submit" class="btn button-ok mt-5">Se connecter</button>
            </form>
        </div>

    </div>

</div>

    {% endblock %}
